{
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.0",
    "parameters": {
      "basics": [
        {
          "name": "resourceGroupName",
          "type": "Microsoft.Common.ResourceGroupPicker",
          "label": "Resource Group",
          "defaultValue": "",
          "constraints": {
            "required": true
          }
        },
        {
          "name": "location",
          "type": "Microsoft.Common.Location",
          "label": "Location",
          "defaultValue": "eastus",
          "constraints": {
            "allowedValues": [
              {
                "label": "East US",
                "value": "eastus"
              },
              {
                "label": "West US",
                "value": "westus"
              },
              {
                "label": "West Europe",
                "value": "westeurope"
              }
            ]
          }
        }
      ],
      "steps": [
        {
          "name": "storageAccountSettings",
          "label": "Storage Account Settings",
          "elements": [
            {
              "name": "storageAccountName",
              "type": "Microsoft.Common.TextBox",
              "label": "Storage Account Name",
              "defaultValue": "",
              "constraints": {
                "required": true,
                "regex": "^[a-z0-9]{3,24}$",
                "validationMessage": "Storage account name must be between 3 and 24 characters and can contain only lowercase letters and numbers."
              }
            }
          ]
        },
        {
          "name": "networkSettings",
          "label": "Network Settings",
          "elements": [
            {
              "name": "virtualNetworkName",
              "type": "Microsoft.Common.TextBox",
              "label": "Virtual Network Name",
              "defaultValue": "",
              "constraints": {
                "required": true
              }
            },
            {
              "name": "subnetName",
              "type": "Microsoft.Common.TextBox",
              "label": "Subnet Name",
              "defaultValue": "",
              "constraints": {
                "required": true
              }
            }
          ]
        }
      ]
    }
  }